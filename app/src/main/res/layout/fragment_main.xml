<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="#ff1f0117">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_announce"
        android:src="@drawable/oannounce"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/image_events"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_info"
        android:src="@drawable/oinfo"
        android:layout_below="@+id/image_announce"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_india"
        android:src="@drawable/windia"
        android:layout_below="@+id/image_exhibition"
        android:layout_alignLeft="@+id/image_events"
        android:layout_alignStart="@+id/image_events"
        android:layout_marginTop="64dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_navi"
        android:layout_alignTop="@+id/image_announce"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/wnavi" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_exhibition"
        android:src="@drawable/gexhibition"
        android:layout_alignTop="@+id/image_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/image_events"
        android:src="@drawable/gevents"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_logo"
        android:src="@drawable/onlylogo"
        android:layout_above="@+id/image_exhibition"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
